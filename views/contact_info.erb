<h3>Your contact's info:</h3>

<h4>Mail Address(es)</h4>
<ul>
  <% @mail.each() do |mail| %>
    <li><%= mail.street() %> <%= mail.city() %> <%= mail.state() %> <%= mail.zip() %></li>
  <% end %>
</ul>

<h4>Email Address(es)</h4>
<ul>
  <% @email.each() do |email| %>
    <li><%= email.email() %></li>
  <% end %>
</ul>

<h4>Phone Number(s)</h4>
<ul>
  <% @phone.each() do |phone| %>
    <li><%= phone.phone() %></li>
  <% end %>
</ul>

